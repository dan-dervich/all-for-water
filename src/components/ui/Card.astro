---
import { Image } from "astro:assets";

const { imgSrc, product } = Astro.props;
const { text } = Astro.props;
---

<button
  class="shadow-xl shadow-violeta/40 flex justify-center items-center flex-col h-full w-full rounded-xl hover:scale-105 transition-all"
>
  <img src={imgSrc} alt={text} class="h-80 w-auto sm:h-60 md:h-50 p-5" />
  <h5 class="p-5 text-custom-grey font-bold">
    {text}
  </h5>
</button>
